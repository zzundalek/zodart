#!/bin/bash
#############################################################
####     Formats the codebase using dart formatter       ####
#############################################################
# Only do this because the pub.dev degrease the pub points  #
# and there is no way to ignore autogenerated files.        #
#############################################################


# Fail if any command fails
set -e

echo "Running dart format..."
